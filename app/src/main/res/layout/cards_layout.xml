<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <TextView
                android:id="@+id/placeNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/placeRatingTextView"
                android:text="Place namePlace namePlace namePlace name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/placeVicinityTextView"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/placeRatingTextView"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeNameTextView"
                android:text="Place Vicinity"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/placeDistanceTextView"
                android:layout_width="match_parent"
                android:layout_toLeftOf="@id/placeRatingTextView"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/placeVicinityTextView"
                android:text="Place Distance"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/placeRatingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/divider2"
                android:drawableRight="@drawable/star"
                android:drawableTint="@color/colorPrimaryDark"
                android:text="5.5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/divider2"
                android:layout_width="10sp"
                android:layout_height="60sp"
                android:layout_toLeftOf="@id/navigateButton"
                android:fontFamily="sans-serif-thin"
                android:text="|"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="48sp" />

            <Button
                android:id="@+id/navigateButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/transparent"
                android:shadowColor="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/baseline_directions"
                android:drawableTint="@color/colorPrimaryDark"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

